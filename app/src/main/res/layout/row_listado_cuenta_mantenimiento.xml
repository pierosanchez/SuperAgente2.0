<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfondoactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_key"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_emisor_tarjeta_mantenimiento"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chkb_registro"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tv_tipo_tarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_tipo_moneda_cuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="13dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <!--<ImageView
            android:id="@+id/iv_editar_beneficiario"
            android:layout_width="22dp"
            android:layout_height="29dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_edit" />-->

        <ImageView
            android:id="@+id/iv_eliminar_beneficiario"
            android:layout_width="22dp"
            android:layout_height="29dp"
            android:layout_gravity="right"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_delete" />

    </LinearLayout>

</LinearLayout>